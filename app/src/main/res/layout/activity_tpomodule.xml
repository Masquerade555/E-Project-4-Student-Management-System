<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".TPOModule">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="TPO Home Module"
        android:textColor="@color/gold"
        android:textSize="40dp"/>

    <Button
        android:id="@+id/addcompany"
        android:layout_width="600px"
        android:layout_height="200px"
        android:layout_marginTop="35dp"
        android:textColor="@color/gold"
        android:gravity="center"
        android:textSize="50px"
        android:text="Add Company"
        android:onClick="btn2"/>

    <Button
        android:id="@+id/addnotif"
        android:layout_width="600px"
        android:layout_height="200px"
        android:layout_marginTop="25dp"
        android:textColor="@color/gold"
        android:gravity="center"
        android:textSize="50px"
        android:text="Send Notifications"
        android:onClick="btn2"/>

    <Button
        android:id="@+id/addprevious"
        android:layout_width="600px"
        android:layout_height="200px"
        android:layout_marginTop="25dp"
        android:textColor="@color/gold"
        android:gravity="center"
        android:textSize="50px"
        android:text="Add Previous Papers" />



</LinearLayout>